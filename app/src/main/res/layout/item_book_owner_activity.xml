<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBookIvItem"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_book"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameBookItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imageBookIvItem"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="20dp"
                android:text="Name"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/priceBookItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imageBookIvItem"
                app:layout_constraintTop_toBottomOf="@id/nameBookItem"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/quantityBookItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imageBookIvItem"
                app:layout_constraintTop_toBottomOf="@id/priceBookItem"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/deleteBookIvItem"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/delete_book"
                />

            <ImageView
                android:id="@+id/editBookIvItem"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/edit_book"
                android:layout_marginBottom="20dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>