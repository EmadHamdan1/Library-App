<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsBookActivity">

    <ImageView
        android:id="@+id/backIvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTvDetails"
        style="@style/TitleTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details Book"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backIvDetails" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageBooCv"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:translationZ="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTvDetails">

        <ImageView
            android:id="@+id/bookImageDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_book" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTvDetails"
        style="@style/TitleTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageBooCv" />

    <TextView
        android:id="@+id/descTvDetails"
        style="@style/TitleTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Description"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTvDetails" />

    <LinearLayout
        android:id="@+id/quantityLl"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bt_shap"
        android:backgroundTint="#D9D9D9"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descTvDetails">

        <ImageView
            android:id="@+id/minusQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="7dp"
            android:src="@drawable/ic_horizontal_rule_24" />

        <TextView
            android:id="@+id/quantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/plusQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@drawable/ic_add_count_24" />

    </LinearLayout>


    <TextView
        android:id="@+id/priceBookTvDetails"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bt_shap"
        android:backgroundTint="#1F1F1F"
        android:gravity="center"
        android:maxWidth="90dp"
        android:minWidth="70dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="14dp"
        android:text="0$"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/descTvDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descTvDetails" />

    <Button
        android:id="@+id/addToCartBtDetails"
        style="@style/ElevatedButtonDetailsStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="55dp"
        android:padding="13dp"
        android:text="Add to Cart"
        app:layout_constraintEnd_toStartOf="@+id/quantityLl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTvDetails" />


    <Button
        android:id="@+id/brooningBook"
        style="@style/ElevatedButtonDetailsStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="13dp"
        android:text="Brooning Book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToCartBtDetails" />


</androidx.constraintlayout.widget.ConstraintLayout>